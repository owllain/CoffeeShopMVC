@model List<Proyecto3.Models.Entities.Venta>

<h1>Lista de Ventas</h1>

<table class="table">
    <thead>
        <tr>
            <th>Número de Orden</th>
            <th>Fecha y Hora de Venta</th>
            <th>Nombre del Plato Vendido</th>
            <th>Cantidad Vendida</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.NumeroOrden</td>
                <td>@venta.FechaHoraVenta</td>
                <td>@venta.NombrePlatoVendido</td>
                <td>@venta.CantidadVendida</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Ventas" asp-action="Edit" asp-route-numeroOrden="@venta.NumeroOrden">Editar</a>
                    <a class="btn btn-danger" asp-controller="Ventas" asp-action="Delete" asp-route-numeroOrden="@venta.NumeroOrden">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear Venta</a>
