<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/x-icon" href="~/favicon.ico">
	<title>@ViewData["Title"] - Proyecto3</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/Images/Icons/cafe.svg" alt="Proyecto2" width="30" height="30" class="d-inline-block align-text-top">
					Proyecto3
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
								<img src="~/Images/Icons/home.svg" alt="Home" width="24" height="24" class="d-inline-block align-text-top">
								Home
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Clientes" asp-action="Index">
								<img src="~/Images/Icons/clientes.svg" alt="Clientes" width="24" height="24" class="d-inline-block align-text-top">
								Clientes
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Platos" asp-action="Index">
								<img src="~/Images/Icons/restaurant.svg" alt="Platos" width="24" height="24" class="d-inline-block align-text-top">
								Platos
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Ventas" asp-action="Index">
								<img src="~/Images/Icons/ventas.svg" alt="Ventas" width="24" height="24" class="d-inline-block align-text-top">
								Ventas
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Reservas" asp-action="Index">
								<img src="~/Images/Icons/calendar-number.svg" alt="Reservas" width="24" height="24" class="d-inline-block align-text-top">
								Reservas
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Reportes" asp-action="Index">
								<img src="~/Images/Icons/document-text.svg" alt="Reportes" width="24" height="24" class="d-inline-block align-text-top">
								Reportes
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FAQ">
								<img src="~/Images/Icons/card.svg" alt="Home" width="24" height="24" class="d-inline-block align-text-top">
								FAQ
							</a>
						</li>




					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer">
		<div class="container text-center">
			&copy; 2023 - Proyecto3 - Hecho por Alvaro Enrique Cascante Moraga - 116260532
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
