@model Proyecto3.Models.Entities.Plato

@{
    ViewData["Title"] = "Agregar Plato";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Platos" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ID">ID:</label>
        <input type="text" class="form-control" id="ID" name="ID" value="@Model.ID" readonly>
    </div>
    <div class="form-group">
        <label for="Nombre">Nombre:</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripción:</label>
        <input type="text" class="form-control" id="Descripcion" name="Descripcion" required>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImagenSubida">Imagen:</label>
        <input type="file" class="form-control" id="ImagenSubida" name="ImagenSubida" required>
    </div>
    <div class="form-group">
        <label for="Precio">Precio:</label>
        <input type="number" class="form-control" id="Precio" name="Precio" min="0" step="0.01" required>
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Categoria">Categoría:</label>
        <select class="form-control" id="Categoria" name="Categoria" required>
            <option value="Local">Local</option>
            <option value="Extranjera">Extranjera</option>
        </select>
        <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>

    <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary mr-2">Guardar</button>
        <a class="btn btn-secondary" asp-controller="Platos" asp-action="Index">Volver</a>
    </div>

</form>
