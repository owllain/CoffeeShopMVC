@model Proyecto3.Models.Entities.Plato


@{
    ViewData["Title"] = "Editar Plato";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Información actual</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Nombre:</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Descripción:</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3">Precio:</dt>
            <dd class="col-sm-9">@Model.Precio</dd>

            <dt class="col-sm-3">Categoría:</dt>
            <dd class="col-sm-9">@Model.Categoria</dd>

            <dt class="col-sm-3">Imagen actual:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImagenBase64))
                {
                    <img src="@Model.ImagenBase64" alt="Imagen del plato" style="max-width: 200px; max-height: 200px;" />
                    <br />

                }
                else
                {
                    <span>Imagen no disponible</span>
                }
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h4>Nueva información</h4>
        <hr />
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción:</label>
                <input asp-for="Descripcion" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio:</label>
                <input type="number" asp-for="Precio" class="form-control" min="0" required />
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label">Categoría:</label>
                <select asp-for="Categoria" class="form-control" required>
                    <option value="Local">Local</option>
                    <option value="Extranjera">Extranjera</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Imagen:</label>
                <input type="file" name="ImagenSubida" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-controller="Platos" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>
